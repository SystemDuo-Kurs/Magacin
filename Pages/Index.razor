@page "/"
@using Services
@inject IItemService ItemService

@code 
{
    protected override async Task OnInitializedAsync()
    {
        Input input = new();
        input.Time = DateTime.Now;
        input.AddItem(new Item { Name = "asdf", Amount = 5, Price = 10, Unit = Unit.Kg }, 3);
        input.AddItem(new Item { Name = "dddd", Amount = 9, Price = 15, Unit = Unit.l }, 9);
        input.AddItem(new Item { Name = "tttt", Amount = 12, Price = 20, Unit = Unit.m }, 12);
        await ItemService.UpdateInputAsync(input);
        
    }
}
